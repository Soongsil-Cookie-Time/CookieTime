<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="227dp">

    <ImageView
        android:id="@+id/search_posterImageView"
        android:layout_width="153dp"
        android:layout_height="227dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/cookie_time_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_page_titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_semi_bold"
        android:maxLines="1"
        android:text="영화제목"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_posterImageView"
        app:layout_constraintTop_toTopOf="@+id/search_posterImageView" />

    <TextView
        android:id="@+id/search_releaseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_light"
        android:maxLines="1"
        android:text="개봉일자"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_posterImageView"
        app:layout_constraintTop_toBottomOf="@+id/search_page_titleText" />

    <TextView
        android:id="@+id/search_runningTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_light"
        android:maxLines="1"
        android:text="러닝타임 | 장르"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_posterImageView"
        app:layout_constraintTop_toBottomOf="@+id/search_releaseDate" />

    <TextView
        android:id="@+id/search_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ellipsize="end"
        android:fontFamily="@font/pretendard_light"
        android:maxLines="1"
        android:text="제작사"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_posterImageView"
        app:layout_constraintTop_toBottomOf="@+id/search_runningTime" />

    <Button
        android:id="@+id/search_cookie_info_button"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gray_button"
        android:fontFamily="@font/pretendard_medium"
        android:padding="0dp"
        android:text="커뮤니티 입장"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_posterImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/search_page_titleText" />


</androidx.constraintlayout.widget.ConstraintLayout>